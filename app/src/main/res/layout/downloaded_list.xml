<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@drawable/card_bg_selector"
    android:descendantFocusability="afterDescendants"
    xmlns:awesome="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:id="@+id/linLayImgLeft">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:id="@+id/imgLeft"
                android:src="@drawable/list_tts"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/tvEditionStr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="Edisi Lebaran"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvEditionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="8dp"
            android:text="12 Maret 2018"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center|right"
        android:layout_height="match_parent"
        android:padding="2dp">

        <cyd.awesome.material.AwesomeButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:layout_marginRight="5dp"

            awesome:awesome_type="bootstrap_success"
            awesome:awesome_rounded_corners="true"

            awesome:awesome_icon="FA_PLAY"
            awesome:awesome_font="font_awesome"

            />

        <cyd.awesome.material.AwesomeButton
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"

            awesome:awesome_type="bootstrap_success"
            awesome:awesome_rounded_corners="true"

            awesome:awesome_icon="FA_TRASH"
            awesome:awesome_font="font_awesome"

            />
    </LinearLayout>
</LinearLayout>