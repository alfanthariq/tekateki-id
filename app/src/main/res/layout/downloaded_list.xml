<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@drawable/card_bg_selector"
    android:descendantFocusability="afterDescendants"
    xmlns:awesome="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/tvEditionStr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Edisi Lebaran"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvEditionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:text="12 Maret 2018"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10sp"
            android:layout_gravity="left"
            android:background="@drawable/bg_status"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="3dp"
            android:id="@+id/tvStatus"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|right"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <cyd.awesome.material.AwesomeButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:layout_marginRight="5dp"

            awesome:awesome_type="bootstrap_success"
            awesome:awesome_rounded_corners="true"

            awesome:awesome_icon="FA_PLAY"
            awesome:awesome_font="font_awesome"

            />

        <cyd.awesome.material.AwesomeButton
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"

            awesome:awesome_type="bootstrap_success"
            awesome:awesome_rounded_corners="true"

            awesome:awesome_icon="FA_TRASH"
            awesome:awesome_font="font_awesome"

            />
    </LinearLayout>
</LinearLayout>